{
  "collectionName": "components_common_featured_banner_splits",
  "info": {
    "displayName": "Featured Banner Split",
    "icon": "bulletList"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "component",
      "component": "common.heading",
      "repeatable": false,
      "required": true
    },
    "description": {
      "type": "component",
      "component": "common.text-list",
      "repeatable": true,
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "footerText": {
      "type": "richtext",
      "required": true
    },
    "hasCta": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "ctaLabel": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "hasCta"
            },
            true
          ]
        }
      }
    },
    "ctaLink": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "hasCta"
            },
            true
          ]
        }
      }
    },
    "ctaID": {
      "type": "string"
    }
  },
  "config": {}
}
